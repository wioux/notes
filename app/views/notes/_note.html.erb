<div class="note" data-id="<%= @note.id %>" data-pinned="<%= @note.is_pinned %>">
  <div class="note-display">
    <span class="title"><%= @note.title %></span>
    <div class="body">
      <%= raw ::MarkdownHTML.render(@note.body || '') %>
    </div>
    <footer>
      <div class="attachments" style="float: right">
        <% if @note.attachments.present? %>
          <strong>Attachments:</strong>
        <% end %>
        <% @note.attachments.each do |attachment| %>
          <%= attachment_link(attachment) %>
        <% end %>
      </div>

      <div class="tags">
        <% @note.tags.map(&:label).each do |tag| %>
          <%= tag_link("/notes?f=.", tag) %>
        <% end %>
      </div>
    </footer>
  </div>

  <div class="note-edit" style="display: none">
    <%= form_for(@note, :html => {'data-note-id' => @note.id}) do |f| %>
    <%= f.hidden_field :date %>

    <div style="position: absolute; top: 4px; width: 70%">
      <%= f.text_field :title, :style => 'width: 100%' %>
      <div class="unsaved-indicator">*</div>
    </div>

    <%= f.text_area :body, :style => 'position: absolute; top: 40px; bottom: 40px; width: 70%' %>

    <div style="position: absolute; bottom: 0px; width: 70%">
      <div class="input-group">
        <!-- <div class="input-group-btn">Attachments</div> -->
        <%= f.text_field :tag_list, :style => 'width: 100%' %>
      </div>
    </div>

    <div class="modal" tabindex="-1" style="display:none">
      <div class="modal-dialog">
        <div class="modal-header"><h3>Attachments</h3></div>
        <div class="modal-content">
          <div class="modal-body">
            <% @note.attachments.build %>
            <%= f.fields_for(:attachments) do |sf| %>
            <%= attachment_edit(sf) %>
            <% end %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
