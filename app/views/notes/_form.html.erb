<div class="note">
  <%= form_for(note) do |f| %>
    <div class="unsaved-indicator">*</div>
    <%= f.hidden_field :date %>

    <div style="position: absolute; top: 4px; width: 90%">
      <%= f.text_field :title, :class => 'form-control', :style => 'width: 100%; border-bottom-left-radius: 0px; border-bottom-right-radius: 0px' %>
    </div>

    <%= f.text_area :body, :class => 'form-control', :style => 'position: absolute; top: 37px; bottom: 36px; width: 90%; border-radius: 0px; resize: none', autofocus: true %>

    <div style="position: absolute; bottom: 2px; width: 90%">
      <div class="input-group">
        <div class="input-group-btn">
          <div class="btn btn-default" data-toggle="modal" data-target="form:visible .tag-selector" style="border-top: 0px; border-top-left-radius: 0px; border-top-right-radius: 0px; padding-top: 7px;">Tags</div>
        </div>

        <%= f.text_field :tag_list, :class => 'form-control', :style => 'border-top: 0px; border-top-left-radius: 0px; border-top-right-radius: 0px; width: 100%' %>

        <div class="input-group-btn">
          <input type="submit" value="Save" class="btn btn-default" style="border-top: 0px; border-top-left-radius: 0px; border-top-right-radius: 0px; padding-top: 7px;" />
        </div>
      </div>
    </div>

    <div class="modal tag-selector" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header"><h3 style="margin: 0px">Tags</h3></div>
          <div class="modal-body">
            <% Tag.labels.each do |tag| %>
              <%= tag_selector_button(note, tag) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
