
<%= form_for(user, url: sessions_path, method: "post", html: { "class": "form-horizontal" }) do |f| %>
  <% if user.errors.any? %>
    <ul>
    <% user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  <%= f.text_field :login_name, placeholder: "Username", "class": "input-xxlarge", autofocus: user.login_name.blank? %>

  <%= f.password_field :password, placeholder: "Password", "class": "input-xxlarge", autofocus: user.login_name.present?  %>

  <%= f.submit "Log In" %>
<% end %>
