<!DOCTYPE html>
<html>
<head>
  <title>Notes</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="app_container">
    <%= react_component "App", { searchPath: notes_path,
                                 autoCompletePath: autocomplete_path,
                                 initialTags: Tag.labels,
                                 initialFilters: [],
                                 initialFilter: params[:f],
                                 initialResults: filter_results,
                                 initialActive: @note && { id: "notes/#{@note.id}",
                                                           url: note_path(@note),
                                                           html: render(@note)     }
                                 },
                                 prerender: true %>
  </div>
</body>
</html>
