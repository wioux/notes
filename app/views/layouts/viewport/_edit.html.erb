<div class="<%= type %>"
     data-id="<%= id %>"
     data-url="<%= url %>">
  <div class="edit">
    <%= form_for(item, 'data-preview-url' => preview_url) do |f| %>
      <div class="unsaved-indicator">*</div>

      <%= f.hidden_field :date %>

      <%= yield f %>

      <div style="position: absolute; bottom: 2px; width: 90%">
        <div class="input-group">
          <div class="input-group-btn">
            <div class="btn btn-default" data-toggle="modal" data-target="form:visible .tag-selector" style="border-top: 0px; border-top-left-radius: 0px; border-top-right-radius: 0px; padding-top: 7px;">Tags</div>
          </div>

          <%= f.text_field :tag_list, :class => 'form-control', :style => 'border-top: 0px; border-top-left-radius: 0px; border-top-right-radius: 0px; width: 100%' %>

          <% if item.respond_to?(:attachments) %>
          <div class="input-group-btn">
            <div class="btn btn-default" data-toggle="modal" data-target="form:visible .attachment-selector" style="border-top: 0px; border-top-left-radius: 0px; border-top-right-radius: 0px; padding-top: 7px;">Attachments</div>
          </div>
          <% end %>
        </div>
      </div>

      <% if item.respond_to?(:attachments) %>
      <div class="modal attachment-selector" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header"><h3 style="margin: 0px">Attachments</h3></div>
            <div class="modal-body">
              <strong>Add Attachments:</strong>
              <div style="padding-left: 10px">
                <% item.attachments.build %>
                  <%= f.fields_for(:attachments) do |sf| %>
                  <%= attachment_edit(sf) %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>

      <div class="modal tag-selector" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header"><h3 style="margin: 0px">Tags</h3></div>
            <div class="modal-body">
              <% Tag.labels.each do |tag| %>
                <%= tag_selector_button(item, tag) %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
